<header class="p-3 bg-dark text-white">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
        <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap">
          <use xlink:href="#bootstrap"></use>
        </svg>
      </a>

      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2  mb-md-0">
        <li><%= link_to "Posts", home_path, class: "nav-link px-2 text-secondary" %></li>
        <% if Current.user %>
          <li><%= link_to "New post", new_post_path, class: "nav-link px-2 text-white" %></li>
          <li><a href="#" class="nav-link px-2 text-white">Subscription</a></li>
          <li><%= link_to "Rooms", rooms_path, class: "nav-link px-2 text-white" %></li>
          <li><%= link_to "About me", about_path, class: "nav-link px-2 text-white" %></li>
        <% end %>

      </ul>
      <ul class="nav ms-auto mb-2 mb-lg-0">
        <% if Current.user %>
          <li class="nav-item"><%= link_to Current.user.email, about_path, class: "nav-link" %></li>
          <li class="nav-item"><%= button_to "Logout", logout_path, method: :delete, class: "btn btn-outline-light me-2" %></li>
        <% end %>
        <% unless Current.user %>
          <%= link_to "Login", login_path, class: "btn btn-outline-light me-2" %>
          <%= link_to "Sign-up", sign_up_path, class: "btn btn-warning" %>
        <% end %>
      </ul>
    </div>
  </div>
</header>
